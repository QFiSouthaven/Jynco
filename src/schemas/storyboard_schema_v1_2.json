{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://jynco.ai/schemas/storyboard/v1.2",
  "title": "Jynco Storyboard Schema",
  "description": "Schema for the Video Generation Foundry storyboard with state tracking and resilience",
  "type": "object",
  "required": ["version", "projectId", "outputSettings", "timeline"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1.2",
      "description": "Schema version identifier"
    },
    "projectId": {
      "type": "string",
      "pattern": "^proj_[a-zA-Z0-9_-]+$",
      "description": "Unique project identifier"
    },
    "outputSettings": {
      "type": "object",
      "required": ["resolution", "fps", "codec"],
      "properties": {
        "resolution": {
          "type": "object",
          "required": ["width", "height"],
          "properties": {
            "width": { "type": "integer", "minimum": 1 },
            "height": { "type": "integer", "minimum": 1 }
          }
        },
        "fps": {
          "type": "integer",
          "minimum": 1,
          "maximum": 120,
          "description": "Frames per second"
        },
        "codec": {
          "type": "string",
          "enum": ["h264", "h265", "vp9", "av1"],
          "description": "Video codec"
        },
        "bitrate": {
          "type": "string",
          "pattern": "^[0-9]+[KMG]?$",
          "description": "Target bitrate (e.g., '5M', '1000K')"
        }
      }
    },
    "timeline": {
      "type": "array",
      "description": "Ordered list of video clips in the timeline",
      "items": {
        "type": "object",
        "required": ["clipId", "status"],
        "properties": {
          "clipId": {
            "type": "string",
            "pattern": "^clip_[a-zA-Z0-9_-]+$",
            "description": "Unique clip identifier"
          },
          "jobId": {
            "type": "string",
            "pattern": "^job_(motion|render)_[a-zA-Z0-9_-]+$",
            "description": "Associated job ID for tracking generation status"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "generating", "completed", "failed"],
            "description": "Current generation status of this clip"
          },
          "errorMessage": {
            "type": "string",
            "description": "Error message if status is 'failed'"
          },
          "sourceFile": {
            "type": ["string", "null"],
            "description": "Path to the generated video clip file"
          },
          "motionPrompt": {
            "type": "string",
            "description": "Text prompt describing the desired motion/animation"
          },
          "sourceImage": {
            "type": "string",
            "description": "Path to the source image for image-to-video generation"
          },
          "duration": {
            "type": "number",
            "minimum": 0,
            "description": "Duration of the clip in seconds"
          },
          "startTime": {
            "type": "number",
            "minimum": 0,
            "description": "Start time in the final timeline (seconds)"
          },
          "effects": {
            "type": "object",
            "description": "Post-processing effects applied to this clip",
            "properties": {
              "transitions": {
                "type": "object",
                "properties": {
                  "in": {
                    "type": "string",
                    "enum": ["fade", "dissolve", "wipe", "none"]
                  },
                  "out": {
                    "type": "string",
                    "enum": ["fade", "dissolve", "wipe", "none"]
                  }
                }
              },
              "filters": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["type"],
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["blur", "sharpen", "brightness", "contrast", "saturation"]
                    },
                    "intensity": {
                      "type": "number",
                      "minimum": 0,
                      "maximum": 1
                    }
                  }
                }
              }
            }
          },
          "cacheKey": {
            "type": "string",
            "description": "SHA-256 hash for caching (sourceImage + motionPrompt)"
          }
        }
      }
    },
    "layers": {
      "type": "object",
      "description": "Additional layers for text, audio, overlays",
      "properties": {
        "audio": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["layerId", "sourceFile"],
            "properties": {
              "layerId": { "type": "string" },
              "sourceFile": { "type": "string" },
              "startTime": { "type": "number", "minimum": 0 },
              "duration": { "type": "number", "minimum": 0 },
              "volume": { "type": "number", "minimum": 0, "maximum": 1 }
            }
          }
        },
        "text": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["layerId", "content"],
            "properties": {
              "layerId": { "type": "string" },
              "content": { "type": "string" },
              "startTime": { "type": "number", "minimum": 0 },
              "duration": { "type": "number", "minimum": 0 },
              "position": {
                "type": "object",
                "properties": {
                  "x": { "type": "number" },
                  "y": { "type": "number" }
                }
              },
              "style": {
                "type": "object",
                "properties": {
                  "fontSize": { "type": "integer" },
                  "fontFamily": { "type": "string" },
                  "color": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
